<form action="/restaurants" method="POST" class="m-5">
  <div class="input-group mb-3">
    <span class="input-group-text">name</span>
    <input type="text" class="form-control" placeholder="name" aria-label="name" name="name" required>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">name_en</span>
    <input type="text" class="form-control" placeholder="name_en" aria-label="name_en" name="name_en">
  </div>
  <div class="form-group">
    <label for="inputCategory" class="col-sm-2 col-form-label mt-2">類別</label>
    <select id="inputCategory" class="col-sm-10 form-control " name="category" size="1" required>
      <option value="中東料理">中東料理</option>
      <option value="日本料理">日本料理</option>
      <option value="義式餐廳">義式餐廳</option>
      <option value="美式">美式</option>
      <option value="酒吧">酒吧</option>
      <option value="咖啡">咖啡</option>
    </select>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">image</span>
    <input type="url" class="form-control" placeholder="image（type URL）" aria-label="image" name="image">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">location</span>
    <input type="text" class="form-control" placeholder="location" aria-label="location" name="location">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">phone</span>
    <input type="text" class="form-control" placeholder="phone（type number）" aria-label="phone" name="phone"
      onkeyup="value=value.replace(/[^\d]/,'')">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">google_map</span>
    <input type="url" class="form-control" placeholder="google_map（type URL）" aria-label="google_map" name="google_map">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">rating</span>
    <input type="text" class="form-control" placeholder="rating（type number）" aria-label="rating" name="rating"
      onkeyup="value=value.replace(/[^\d.]/g,'')">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">description</span>
    <input type="text" class="form-control" placeholder="description" aria-label="description" name="description">
  </div>
  <button type="submit">Create</button>
</form>